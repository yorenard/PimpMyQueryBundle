<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!--form-->
        <parameter key="yorenard_pimp_my_query.form.type.pmq_query.type.class">YoRenard\PimpMyQueryBundle\Form\QueryType</parameter>
        <parameter key="yorenard_pimp_my_query.form.type.custom_param.type.class">YoRenard\PimpMyQueryBundle\Form\CustomParamType</parameter>

        <!--constraints-->
        <parameter key="yorenard_pimp_my_query.form.constraints">YoRenard\PimpMyQueryBundle\Form\Extension\Validator\Constraints\</parameter>
        <parameter key="yorenard_pimp_my_query.form.constraints.validator.form.class">%yorenard_pimp_my_query.form.constraints%FormValidator</parameter>
    </parameters>

    <services>
        <!--form-->
        <service id="yorenard_pimp_my_query.form.type.pmq_query.type" class="%yorenard_pimp_my_query.form.type.pmq_query.type.class%" />
        <service id="yorenard_pimp_my_query.form.type.custom_param.type" class="%yorenard_pimp_my_query.form.type.custom_param.type.class%" />

        <!--constraints-->
        <service id="yorenard_pimp_my_query.form.constraints.validator.form" class="%yorenard_pimp_my_query.form.constraints.validator.form.class%" />
    </services>
</container>